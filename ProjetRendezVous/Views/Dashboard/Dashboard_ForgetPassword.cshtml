@model ProjetRendezVous.Persistence.Models.ForgotPasswordViewModel
@{
    Layout = "~/Views/Shared/_Layout_Dashboard.cshtml";
    ViewBag.Title = "Forgot your password?";

}

<div class="row w-100 h-100 d-flex justify-content-center align-items-center bg-light">
    <div class="col-md-8 w-100 h-100 d-flex justify-content-center align-items-center">
        <div id="loginForm" class="shadow-lg w-50 h-50 d-flex justify-content-center border border-secondary rounded align-content-center flex-column  px-3 py-4">
            <h4 class="pl-2 py-2">Enter your email </h4>
            @using (Html.BeginForm("Dashboard_ForgetPassword", "Dashboard", FormMethod.Post, new { @class = "form-horizontal d-flex w-100 h-75 justify-content-center align-content-center flex-column", role = "form" }))
            {
                @Html.AntiForgeryToken()


                <div class="form-group w-100 d-flex justify-content-center flex-column py-2">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label font-weight-bold" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control col-md-12 w-100" })
                    </div>
                </div>
                <div class="form-group w-100 mt-3">
                    <div class="d-flex justify-content-center">
                        <input type="submit" class="btn btn-success px-2" value="Email Link" />
                    </div>
                </div>
                @Html.ValidationSummary("", new { @class = "text-danger" })
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
