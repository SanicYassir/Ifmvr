@model ProjetRendezVous.Persistence.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = "~/Views/Shared/_Layout_Dashboard.cshtml";
}

<div class="row w-100 h-100 d-flex justify-content-center align-items-center bg-light">
    <div class="col-md-8 w-100 h-100 d-flex justify-content-center align-items-center">
        <div id="loginForm" class="shadow-lg w-50  d-flex justify-content-center border border-secondary rounded align-content-center flex-column  px-3 py-4">
            @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal d-flex w-100 h-100 justify-content-center align-content-center flex-column py-2 px-3", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h5 class="py-2">Reset your password </h5>
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Code)
                <div class="form-group w-100 d-flex justify-content-center flex-column">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-12  control-label" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control col-md-12" })
                    </div>
                </div>
                <div class="form-group w-100 d-flex justify-content-center flex-column">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-12  control-label" })
                    <div class="col-md-12">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control col-md-12" })
                    </div>
                </div>
                <div class="form-group w-100 d-flex justify-content-center flex-column">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-12 control-label" })
                    <div class="col-md-12">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control col-md-12" })
                    </div>
                </div>
                <div class="form-group">
                    <div class=" d-flex justify-content-center">
                        <input type="submit" class="btn btn-info px-4 font-weight-bold" value="Reset password" />
                    </div>
                </div>


            }
        </div>
    </div>
</div>